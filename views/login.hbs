<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Login</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav>
      <div class="nav-left">
        <ul>
          <li><img src="../assets/img/logo.png" alt="logo-error" /></li>
          <li><a class="nav-link active" href="/">Home</a></li>
          <li>
            <a class="nav-link" href="/testimonials">Testimonials</a>
          </li>
        </ul>
      </div>

      <div class="nav-right d-flex">
        <ul class="navbarLog">
          {{#if isLogin}}
            <h3>Halo, {{user.userName}}</h3>
            <form action="/logout" method="POST">
              <button>Logout</button>
            </form>
          {{else}}
            <li>
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li>
              <a class="nav-link" href="/login">Login</a>
            </li>
          {{/if}}
        </ul>
        <button type="button" class="btn btn-dark"><a href="/contactMe">Contact
            Me</a></button>
      </div>

      <button id="hamburger-button" onclick="buttonHamburger()">
        <i class="fa-solid fa-bars fa-2x"></i>
      </button>
    </nav>
    <div class="hamburger-bars hide" id="hamburger-bars">
      <div class="countHam">
        <a href="/" class="hamburger active">Home</a>
        <a href="/testimonials" class="hamburger">Testimonials</a>
        {{#if isLogin}}
          <h3>Halo, {{user.userName}}</h3>
          <form action="/logout" method="POST">
            <button>Logout</button>
          </form>
        {{else}}
          <a href="/register" class="hamburger">Register</a>
          <a href="/login" class="hamburger">Login</a>
        {{/if}}
        <button type="button" class="btn btn-dark"><a
            href="/contactMe"
            class="hamburger"
          >Contact Me</a></button>
      </div>
    </div>

    {{! Form Login }}
    <div class="container d-flex justify-content-center">
      <div class="w-50">
        <h3 class="text-center mt-5">LOGIN</h3>
        {{#if messages.danger}}
          <div
            style="padding: 20px; background-color: red; width:100%; color: white"
          >
            {{messages.danger}}
          </div>
        {{/if}}

        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              name="email"
              class="form-control"
              id="email"
              aria-describedby="emailHelp"
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              id="password"
            />
          </div>
          <button type="submit" class="btn btn-dark mt-3 px-5">Submit</button>
        </form>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="../assets/js/nav.js"></script>
  </body>
</html>