<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../assets/css/myProject.css" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>My Project</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav>
      <div class="nav-left">
        <ul>
          <li><img src="../assets/img/logo.png" alt="logo-error" /></li>
          <li><a class="nav-link" href="/">Home</a></li>
          <li>
            <a class="nav-link active" href="/myProject">My Project</a>
          </li>
          <li>
            <a class="nav-link" href="/testimonials">Testimonials</a>
          </li>
        </ul>
      </div>

      <div class="nav-right">
          <a href="/contactMe" class="btn btn-dark">Contact Me</a>
      </div>

      <button id="hamburger-button" onclick="buttonHamburger()">
        <i class="fa-solid fa-bars fa-2x"></i>
      </button>
    </nav>
    <div class="hamburger-bars hide" id="hamburger-bars">
      <div class="countHam">
        <a href="/" class="hamburger">Home</a>
        <a href="/myProject" class="hamburger active">My Project</a>
        <a href="/testimonials" class="hamburger">Testimonials</a>
        <a href="/contactMe" class="hamburger btn btn-dark">Contact Me</a>
      </div>
    </div>

    <!-- listItem -->
  <a href="/addProject">
  <div class="d-flex justify-content-end"><button type="button" class="btn btn-dark mt-5 me-5 px-5">Add Project</button>
  </a>
  </div>
    <h2>List My Project</h2>
    <div class="myProject" id="myProject">
    {{#each projects }}
      <div class="cardContent">
        <img src="{{this.file}}" alt="" />
        <div class="isi">
          <div class="judul"><a href="/detailProject/{{@index}}">{{this.projectName}}</a></div>
          <div class="durasi">{{this.duration}}</div>
          <p>{{this.description}}</p>
          <div class="technologi">
            {{#each this.techbox}}
            <i class="fa-brands {{this}}"></i>
            {{/each}}
          </div>
          <div class="button">
            <a href="/updateProject/{{@index}}"><button type="button" class="btn btn-dark">Edit</button></a>
            <form onsubmit="deletePost({{@index}})">
            <button class="btn btn-dark px-2">Delete</button>
            </form>
            {{!-- <form method="POST" action="/myProject/{{@index}}">
            <button class="btn btn-dark px-2">Delete</button>
            </form> --}}
          </div>
        </div>
      </div>
    {{/each }}
    </div>
    <script
      src="https://kit.fontawesome.com/b9d0ad08e2.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="../assets/js/myProject.js"></script>
    <script src="../assets/js/nav.js"></script>
  </body>
</html>