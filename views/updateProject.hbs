<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <link rel="stylesheet" href="../assets/css/addProject.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/b9d0ad08e2.js"
      crossorigin="anonymous"
    ></script>
    <title>Add Project</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav>
      <div class="nav-left">
        <ul>
          <li><img src="../assets/img/logo.png" alt="logo-error" /></li>
          <li><a class="nav-link active" href="/">Home</a></li>
          <li>
            <a class="nav-link" href="/testimonials">Testimonials</a>
          </li>
        </ul>
      </div>

      <div class="nav-right d-flex">
        <ul class="navbarLog">
          {{#if isLogin}}
            <h3>Halo, {{user.userName}}</h3>
            <form action="/logout" method="POST">
              <button>Logout</button>
            </form>
          {{else}}
            <li>
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li>
              <a class="nav-link" href="/login">Login</a>
            </li>
          {{/if}}
        </ul>
        <button type="button" class="btn btn-dark"><a href="/contactMe">Contact
            Me</a></button>
      </div>

      <button id="hamburger-button" onclick="buttonHamburger()">
        <i class="fa-solid fa-bars fa-2x"></i>
      </button>
    </nav>
    <div class="hamburger-bars hide" id="hamburger-bars">
      <div class="countHam">
        <a href="/" class="hamburger active">Home</a>
        <a href="/testimonials" class="hamburger">Testimonials</a>
        {{#if isLogin}}
          <h3>Halo, {{user.userName}}</h3>
          <form action="/logout" method="POST">
            <button>Logout</button>
          </form>
        {{else}}
          <a href="/register" class="hamburger">Register</a>
          <a href="/login" class="hamburger">Login</a>
        {{/if}}
        <button type="button" class="btn btn-dark"><a
            href="/contactMe"
            class="hamburger"
          >Contact Me</a></button>
      </div>
    </div>

    <!-- inputItems -->
    <div class="countainer">
      <h2>Update Project</h2>
      <form
        method="POST"
        action="/updateProject/{{Project.id}}"
        enctype="multipart/form-data"
      >
        <input value="{{Project.id}}" name="id" hidden />
        <label for="projectName">Project Name</label>
        <input
          type="text"
          id="projectName"
          name="projectName"
          value="{{Project.nameProjects}}"
        />
        <div class="date">
          <div class="startDate">
            <label for="startDate">Start Date</label>
            <input
              type="date"
              id="startDate"
              name="startDate"
              value="{{Project.startDate}}"
            />
          </div>
          <div class="endDate">
            <label for="endDate">End Date</label>
            <input
              type="date"
              id="endDate"
              name="endDate"
              value="{{Project.endDate}}"
            />
          </div>
        </div>
        <label for="description">Description</label>
        <textarea
          name="description"
          id="description"
          cols="30"
          rows="10"
        >{{Project.description}}</textarea>
        <label for="technologi">Technologies</label>
        <div class="techAwal">
          <div class="Tech1">
            <input
              type="checkbox"
              name="techbox"
              id="nodeJs"
              value="fa-node-js"
              {{Project.fa-node-js}}
            />
            <label for="nodeJs">Node Js</label>
          </div>
          <div class="Tech2">
            <input
              type="checkbox"
              name="techbox"
              id="golang"
              value="fa-golang"
              {{Project.fa-golang}}
            />
            <label for="nextJs">Golang</label>
          </div>
        </div>
        <div class="techAkhir">
          <div class="Tech2">
            <input
              type="checkbox"
              name="techbox"
              id="reactJs"
              value="fa-react"
              {{Project.fa-react}}
            />
            <label for="reactJs">React Js</label>
          </div>
          <div class="Tech4">
            <input
              type="checkbox"
              name="techbox"
              id="JavaScript"
              value="fa-js"
              {{Project.fa-js}}
            />
            <label for="typeScript">Java Script</label>
          </div>
        </div>
        <div class="input-group">
          <input
            type="file"
            class="form-control"
            name="file"
            id="inputGroupFile04"
            aria-describedby="inputGroupFileAddon04"
            aria-label="Upload"
          />
        </div>
        <div class="submit">
          <button type="submit" class="btn btn-dark">
            Submit
          </button>

        </div>
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="../assets/js/myProject.js"></script>
    <script src="../assets/js/nav.js"></script>
  </body>
</html>