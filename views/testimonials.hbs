<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Testimonial</title>
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <link rel="stylesheet" href="../assets/css/testimonial.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>

  <body>
    <nav>
      <div class="nav-left">
        <ul>
          <li><img src="../assets/img/logo.png" alt="logo-error" /></li>
          <li><a class="nav-link" href="/">Home</a></li>
          <li>
            <a class="nav-link active" href="/testimonials">Testimonials</a>
          </li>
        </ul>
      </div>

      <div class="nav-right">
        <button type="button" class="btn btn-dark">
          <a href="/contactMe">Contact Me</a>
        </button>
      </div>

      <button id="hamburger-button" onclick="buttonHamburger()">
        <i class="fa-solid fa-bars fa-2x"></i>
      </button>
    </nav>
    <div class="hamburger-bars hide" id="hamburger-bars">
      <div class="countHam">
        <a href="/" class="hamburger">Home</a>
        <a href="/testimonials" class="hamburger active">Testimonials</a>
        <button type="button" class="btn btn-dark">
          <a href="/contactMe" class="hamburger">Contact Me</a>
        </button>
      </div>
    </div>

    <div class="container">
      <h1>My Testimonials</h1>
      <div class="container-rating">
        <div class="rating">
          <button
            type="button"
            class="btn btn-dark m-2 border-0"
            style="padding: 6px 44px !important"
            onclick="allTestimonial()"
          >
            All
            <i class="fa-solid fa-star"></i>
          </button>
          <button
            type="button"
            class="btn btn-dark m-2 px-5 border-0"
            onclick="filterTestimonials(1)"
          >
            1
            <i class="fa-solid fa-star"></i>
          </button>
          <button
            type="button"
            class="btn btn-dark m-2 px-5 border-0"
            onclick="filterTestimonials(2)"
          >
            2
            <i class="fa-solid fa-star"></i>
          </button>
          <button
            type="button"
            class="btn btn-dark m-2 px-5 border-0"
            onclick="filterTestimonials(3)"
          >
            3
            <i class="fa-solid fa-star"></i>
          </button>
          <button
            type="button"
            class="btn btn-dark m-2 px-5 border-0"
            onclick="filterTestimonials(4)"
          >
            4
            <i class="fa-solid fa-star"></i>
          </button>
          <button
            type="button"
            class="btn btn-dark m-2 px-5 border-0"
            onclick="filterTestimonials(5)"
          >
            5
            <i class="fa-solid fa-star"></i>
          </button>
        </div>
      </div>

      <section class="testimonials" id="testimonials"></section>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="../assets/js/nav.js"></script>
    <script src="../assets/js/asyncPromAjax.js"></script>
  </body>
</html>